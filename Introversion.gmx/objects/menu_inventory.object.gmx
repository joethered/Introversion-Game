            <string>if (keyboard_check_pressed(vk_right) || keyboard_check_pressed(vk_left)
    || keyboard_check_pressed(vk_down) || keyboard_check_pressed(vk_up)
    || keyboard_check_pressed(ord('C'))){

    audio_play_sound(sfx_menu, true, 0);    
}

if (keyboard_check_pressed(vk_right)){
    if (cursor_col &lt; cols - 1){
        cursor_x += x_spacing;
        cursor_col += 1;
    }else{
        cursor_x = cursor_start_x;
        cursor_col = 0
    }
}
if (keyboard_check_pressed(vk_left)){
    if (cursor_col &gt; 0){
        cursor_x -= x_spacing;
        cursor_col -= 1;
    }else{
        cursor_x = cursor_start_x + (cols-1)*x_spacing;
        cursor_col = cols-1;
    }
}
if (keyboard_check_pressed(vk_down)){
    if (cursor_row &lt; rows-1){
        cursor_row += 1;
        if (view_cursor_row &lt; view_rows-1){
            cursor_y += y_spacing;
            view_cursor_row += 1; 
        }else{
            view_start += 2;
            view_end += 2;
        }
    }else{
        view_start = 0;
        view_end = 6;
        view_cursor_row = 0;
        cursor_y = cursor_start_y;
        cursor_row = 0;
    }
            
}
if (keyboard_check_pressed(vk_up)){
    if (cursor_row &gt; 0){
        cursor_row -= 1;
        if (view_cursor_row &gt; 0){
            cursor_y -= y_spacing;
            view_cursor_row -= 1; 
        }else{
            view_start -= 2;
            view_end -= 2;
        }
    }else{
        view_end = items;
        view_start = items-6;
        view_cursor_row = view_rows - 1;
        cursor_y = cursor_start_y + (view_rows-1)*y_spacing;
        cursor_row = rows-1;
    }
}

if (keyboard_check_pressed(ord('X')) || keyboard_check_pressed(vk_enter)){
    index = cursor_row * cols + cursor_col;
    if (item[index,2] &gt; 0){
        global.item[index,1] -= 1;
        script_execute(item[index,4], item[index,0], item[index,3]);
        with (menu_convo_main){
            widget[0].increasing = false;
        }
        instance_destroy();
    }else{
        audio_play_sound(sfx_bad_select, true, 0);  
    }
}

if (keyboard_check_pressed(ord('C'))){
    instance_destroy();
}
